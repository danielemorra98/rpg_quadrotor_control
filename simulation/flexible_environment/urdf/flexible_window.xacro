<?xml version="1.0"?>

<robot name="window_environment" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Used for fixing robot to Gazebo 'base_link' -->
  <link name="world"/>

	<joint name="window_hinge_1" type="revolute">
    <parent link="world"/>
    <child link="window_1"/>
    <origin xyz="0 0.225 1.125"/>
    <axis xyz="0 0 1"/>
    <limit effort="15.0" lower="-1.57" upper="1.57" velocity="1"/>
  </joint>

  <link name="window_1">
     <inertial>
      <origin xyz="0 0.2 1.125"/> 
      <mass value="5.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0.2 1.125" rpy="0 0 1.57" />
      <geometry>
        <box size="0.4 .1 2.2"/>
      </geometry>
    </visual>
  </link>


</robot>